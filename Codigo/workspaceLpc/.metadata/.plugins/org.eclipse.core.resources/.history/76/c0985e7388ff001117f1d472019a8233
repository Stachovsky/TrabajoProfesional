#ifndef API_UART_H_
#define API_UART_H_

#include "LPC17xx.h"

#include "lpc17xx_pinsel.h"
#include "lpc17xx_uart.h"

typedef enum{
	UART_PORT_0 = 0,
	UART_PORT_1 = 1,
	UART_PORT_2 = 2,
	UART_PORT_3 = 3
	} uartPortNumber;

typedef struct{
		LPC_UART_TypeDef*	port;
		PINSEL_CFG_Type		pin;
		UART_CFG_Type		config;
	} uartPort;


void API_Uart_Config(uartPortNumber portNumber);
void API_UartSendString(uartPortNumber portNumber,uint8_t* data);
void API_UartSendByte(uint8_t data);


#endif /* API_UART_H_ */
