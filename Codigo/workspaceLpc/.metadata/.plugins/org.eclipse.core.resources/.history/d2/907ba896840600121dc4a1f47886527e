/**
 * Name        : main.c
 * Version     :
 * Description : main definition for FreeRTOS application
 */

/*
 * FreeRTOS includes
 */
#include "FreeRTOS.h"
#include "task.h"
#include "queue.h"
#include "semphr.h"

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "uart.h"

#define USERTASK_STACK_SIZE configMINIMAL_STACK_SIZE

void __error__(char *pcFilename, unsigned long ulLine) {
}

static void setupHardware(void) {
	API_UartConfig(UART_PORT_3, NULL);
}

void vUserTask1(void *pvParameters) {

//	uint8_t nada[15];
//	int8_t i = 0;

//	API_EnableInterrupt(UART_PORT_3);
	const portTickType xDelay = 100 / portTICK_RATE_MS;


	while (1) {
//		sprintf((char*)nada, "tick %d\r\n", (int)i++);
		API_UartSendByte(UART_PORT_3,'F');
		vTaskDelay( xDelay );
	}
}

/**
 * Program entry point 
 */
int main(void) {
	setupHardware();

	API_UartSendString(UART_PORT_3,"Inicio\r\n");

	/* 
	 * Start the tasks defined within this file/specific to this demo. 
	 */
	xTaskCreate( vUserTask1, ( signed portCHAR * ) "Task1", 240, NULL, 1, NULL );

	/* 
	 * Start the scheduler. 
	 */
	vTaskStartScheduler();

	/* 
	 * Will only get here if there was insufficient memory to create the idle task. 
	 */
	return 1;
}
